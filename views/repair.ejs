  <script>
    var total = 0.0;
    var cart = [];
    document.addEventListener("DOMContentLoaded", function () {
      const serviceCards = document.querySelectorAll(".service-card");

      serviceCards.forEach(function (serviceCard) {
        const readMoreButton = serviceCard.querySelector(".read-more");
        const readMoreDropdown = serviceCard.querySelector(
          ".read-more-dropdown"
        );

        readMoreButton.addEventListener("click", function () {
          readMoreButton.style.display = "none";
          readMoreDropdown.style.display = "block";
        });

        document.addEventListener("click", function (event) {
          if (
            !event.target.closest(".read-more-dropdown") &&
            !event.target.closest(".read-more")
          ) {
            readMoreDropdown.style.display = "none";
            readMoreButton.style.display = "block";
          }
        });

        serviceCard.addEventListener("click", function (event) {
          if (event.target.classList.contains("add-to-cart-dropdown")) {
            const serviceTitle =
              serviceCard.querySelector(".card-title").innerText;
            const price = parseFloat(
              serviceCard
                .querySelector(".badge.bg-primary")
                .innerText.match(/\d+\.\d+/)[0]
            );
            const listItem = document.createElement("li");
            listItem.className = "list-group-item";
            listItem.textContent = serviceTitle;
            listItem.dataset.price = price;
            document
              .querySelector(".selected-services-list")
              .appendChild(listItem);
            const removeButton = document.createElement("button");
            removeButton.className =
              "btn btn-danger btn-sm float-right remove-service";
            removeButton.textContent = "-";
            removeButton.style.marginLeft = "20px";
            removeButton.addEventListener("click", function () {
              listItem.remove();
              updateTotalCost();
            });

            listItem.appendChild(removeButton);

            updateTotalCost();
          }
        });
      });

      function updateTotalCost() {
        cart=[];
        const selectedServices = document.querySelectorAll(
          ".selected-services-list li"
        );

        let totalCost = 0;

        selectedServices.forEach((service) => {
          cart.push(service);
          totalCost += parseFloat(service.dataset.price);
        });
        total = totalCost;
        document.getElementById("total").innerText = total.toFixed(2);
        const totalCostElement = document.querySelector(
          ".checkout-div .total-cost"
        );
        if (totalCostElement) {
          totalCostElement.textContent = `Total Cost: Rs ${totalCost.toFixed(
            2
          )}`;
        }
      }
    });

    document
      .getElementById("checkout-form")
      .addEventListener("submit", function (event) {
        event.preventDefault();

        // Add hidden input fields for each item in the cart
        cart.forEach((item, index) => {
          var serviceNameInput = document.createElement("input");
          var priceInput = document.createElement("input");
          serviceNameInput.type = "hidden";
          priceInput.type = "hidden";
          serviceNameInput.name = `service${index + 1}`; // Unique name for each service
          priceInput.name = `price${index + 1}`; // Unique name for each price
          serviceNameInput.value = item.textContent;
          priceInput.value = item.dataset.price;
          this.appendChild(serviceNameInput);
          this.appendChild(priceInput);
        });

        // Add a hidden input field to the form with the total amount
        var totalInput = document.createElement("input");
        totalInput.type = "hidden";
        totalInput.name = "total";
        totalInput.value = total.toFixed(2);
        this.appendChild(totalInput);

        // Submit the form
        this.submit();
      });
  </script>


