<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>History</title>
    <style>
        header {
        background-color: #ececc6;
        color: rgb(36, 36, 36);
        padding: 20px;
        text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <header>
        <h1>User History</h1>
    </header>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Amount</th>
                <th>Location</th>
                <th>Date</th>
                <th>Services</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(item => { %>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.phonenumber %></td>
                    <td><%= item.amount %></td>
                    <td><%= item.location %></td>
                    <td><%= item.date %></td>
                    <td><%= item.services %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
