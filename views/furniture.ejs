    <form id="checkout-form" method="get" action="/checkout">
      <div class="cart" id="cart">
        <h2>Cart</h2>
        <ul id="cart1"></ul>
        <p>Total: Rs<span id="total">0</span></p>
        <button id="cart-final">Checkout</button>
      </div>
    </form>

