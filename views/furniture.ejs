    <style>
      /* ... (Your existing styles) ... */
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f8f8;
        color: #333;
      }

      header {
        background-color: #ececc6;
        color: rgb(36, 36, 36);
        padding: 20px;
        text-align: center;
      }

      section {
        position: relative;
        padding: 20px;
      }

      .back-button {
        position: absolute;
        top: 10px;
        left: 10px;
        cursor: pointer;
        background-color: transparent;
        border: none;
        outline: none;
      }

      .back-button img {
        max-width: 30px;
        max-height: 30px;
        transition: opacity 0.3s ease-in-out;
      }

      .back-button:hover img {
        opacity: 0.8;
      }

      .back-button:hover::after {
        content: "Previous Page";
        position: absolute;
        top: 50%;
        left: calc(100% + 10px);
        padding: 5px;
        background-color: #1a1a1a;
        color: #fff;
        border-radius: 5px;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
        transform: translateY(-50%);
      }

      .back-button:hover::before {
        content: "";
        position: absolute;
        top: 50%;
        left: calc(100% + 5px);
        border-width: 5px;
        border-style: solid;
        border-color: transparent transparent transparent #1a1a1a;
        transform: translateY(-50%);
      }
      .service {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #ccc;
        padding: 20px 0;
      }

      .service img {
        max-width: 120px;
        border-radius: 8px;
        margin-right: 20px;
      }

      .service-info {
        flex-grow: 1;
      }

      .service h2 {
        font-size: 24px;
        margin: 0;
        color: #333;
      }

      .service p {
        color: #666;
        margin: 10px 0;
        font-size: 16px;
      }

      .service-price {
        font-weight: bold;
        font-size: 18px;
        color: #ffae42;
      }

      .service button {
        background-color: #ffae42;
        color: rgb(92, 92, 92);
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease-in-out;
      }

      .service button:hover {
        background-color: #333;
      }

      .cart {
        position: fixed;
        top: 0;
        right: 0;
        background-color: #ffae42;
        color: rgb(114, 114, 114);
        padding: 20px;
        text-align: center;
        z-index: 999;
      }

      .cart h2 {
        font-size: 24px;
        margin-bottom: 10px;
      }

      #cart1 {
        list-style: none;
        padding: 0;
      }

      #cart1 li {
        font-size: 16px;
        margin-bottom: 5px;
      }

      #total {
        font-size: 18px;
        font-weight: bold;
      }

      footer {
        background-color: #ffae42;
        color: rgb(106, 105, 105);
        padding: 10px;
        text-align: center;
        position: relative;
        bottom: 0;
        width: 100%;
      }

      .read-more {
        cursor: pointer;
        color: #ffae42;
        text-decoration: underline;
      }

      .service-details {
        display: none;
        margin-top: 10px;
      }

      .service button,
      .read-more {
        background-color: #ffae42;
        color: rgb(83, 81, 81);
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease-in-out;
      }

      .service button:hover,
      .read-more:hover {
        background-color: #fbfbd6;
      }

      .remove-btn {
        background-color: #ff4d4d;
        color: #fff;
        border: none;
        padding: 5px 10px;
        border-radius: 3px;
        cursor: pointer;
      }

      /* Back navigation arrow */
      .back-arrow {
        position: absolute;
        top: 20px;
        left: 20px;
        font-size: 24px;
        color: #fff;
        text-decoration: none;
      }
      #cart-final {
        background-color: #be5127;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease-in-out;
      }
    </style>
  </head>

